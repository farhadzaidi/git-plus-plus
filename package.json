{
  "name": "git-plus-plus",
  "version": "1.1.1",
  "type": "module",
  "author": "Syed F. Zaidi",
  "license": "MIT",
  "description": "Interactive Git extension with intuitive commands for branch management, staging, and committing",
  "keywords": [
    "git",
    "cli",
    "interactive",
    "branch",
    "commit",
    "stage",
    "workflow",
    "developer-tools"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/farhadzaidi/git-plus-plus.git"
  },
  "homepage": "https://github.com/farhadzaidi/git-plus-plus#readme",
  "packageManager": "pnpm@10.19.0",
  "bin": {
    "gpp": "dist/gpp.js"
  },
  "files": [
    "dist",
    "postinstall.js"
  ],
  "scripts": {
    "dev": "tsx ./bin/gpp.ts",
    "build": "tsup ./bin/gpp.ts --format esm --clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "node ./postinstall.js",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "execa": "^9.6.0",
    "ini": "^6.0.0"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6"
  }
}
